<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root minWidth="-Infinity"
         type="javafx.scene.layout.VBox" onMousePressed = "#doSomething"
         xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../../css/GraphList/GraphList.css">

	<GridPane fx:id="graphListPane" minWidth="-Infinity" VBox.vgrow="ALWAYS" >
    <columnConstraints>
    	<ColumnConstraints hgrow="SOMETIMES" maxWidth="320.0" minWidth="0" prefWidth="320.0" />
    	<ColumnConstraints hgrow="SOMETIMES" maxWidth="0" minWidth="0" prefWidth="0" />
    </columnConstraints>

    <rowConstraints>
    	<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="20.0" minHeight="20.0" prefHeight="20.0" vgrow="SOMETIMES" />
    	<RowConstraints minHeight="10.0" vgrow="ALWAYS" />
    </rowConstraints>

    <children>
        <VBox fx:id="graphListBox" prefWidth="300" spacing="10" GridPane.rowIndex="2" alignment="TOP_CENTER" >
            <padding>
                <Insets top="4" right="8" bottom="4" left="8" />
            </padding>
        </VBox>

        <Button fx:id="openButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#openGraphList" style="-fx-background-color: #0000;" visible="false" GridPane.columnIndex="1">
            <graphic>
                <FontIcon iconLiteral="fa-angle-double-right" iconSize="24" />
            </graphic>
            <padding>
                <Insets bottom="-4.0" top="-4.0" />
            </padding>
        </Button>

        <AnchorPane>
            <children>
                <Button contentDisplay="CENTER" styleClass="transparent-button" graphicTextGap="0.0" onAction="#closeGraphList" textAlignment="CENTER" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="10.0">
                    <graphic>
                        <FontIcon iconLiteral="fa-angle-double-left" iconSize="24" />
                    </graphic>
                    <padding>
                        <Insets bottom="4.0" top="4.0" right="8.0" left="8.0"/>
                    </padding>
                </Button>

                <Button contentDisplay="CENTER" styleClass="transparent-button" graphicTextGap="0.0" layoutX="8.0" onAction="#requestAddingGraphData" textAlignment="CENTER" AnchorPane.leftAnchor="4.0" AnchorPane.topAnchor="10.0">
                    <graphic>
                        <FontIcon iconLiteral="fa-plus" iconSize="18" />
                    </graphic>
                    <padding>
                        <Insets bottom="8.0" top="8.0" right="8.0" left="8.0"/>
                    </padding>
                </Button>
            </children>
        </AnchorPane>

      </children>
   </GridPane>
</fx:root>